{
  "compilerOptions": {
    "target": "esnext",
    // "sourceMap": true,
    "lib": [
      // "webworker",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "jsxFactory": "h",
    "jsxImportSource": "preact"
  },
  "include": [
    ".eslintrc.js", 
    "vite.config.ts",
    "tailwind.config.ts", 
    "src", 
    "src/main.tsx", 
  ]
}
